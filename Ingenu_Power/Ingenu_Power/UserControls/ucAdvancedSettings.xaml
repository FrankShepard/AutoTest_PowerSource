<UserControl x:Class="Ingenu_Power.UserControls.UcAdvancedSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ingenu_Power.UserControls"
			  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             mc:Ignorable="d" 
             d:DesignHeight="443" d:DesignWidth="726">
	<Grid Height="443" Width="726" HorizontalAlignment="Center" VerticalAlignment="Center">
		<materialDesign:Card HorizontalAlignment="Center" VerticalAlignment="Center" Width="706" Height="423" Padding="10" Margin="20" >
			<Grid>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="2*"/>
						<ColumnDefinition Width="2.5*"/>
					</Grid.ColumnDefinitions>
					<GroupBox Grid.Row="0" Grid.Column="0" Header="权限设置" Style="{DynamicResource MaterialDesignGroupBox}" Margin="10" materialDesign:ShadowAssist.ShadowDepth="Depth3" BorderThickness="0">
						<Grid Margin="0">
							<Grid.RowDefinitions >
								<RowDefinition Height="*"/>
								<RowDefinition Height="2*"/>
							</Grid.RowDefinitions>
							<TreeView Grid.Row="0" Grid.Column="0" Margin="0" >
								<TreeViewItem IsExpanded="False">
									<TreeViewItem.Header>
										<WrapPanel>
											<materialDesign:PackIcon Kind="AccountAdd" />
											<TextBlock Text=" 新增用户"/>
										</WrapPanel>
									</TreeViewItem.Header>
									<TreeViewItem Height="50">
										<TreeViewItem.Header>
											<WrapPanel>
												<TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="" MaxLength="5" Name="TxtAddedUser" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="80">
													<materialDesign:HintAssist.Hint>
														<StackPanel Orientation="Horizontal" Margin="0">
															<materialDesign:PackIcon Kind="Worker" />
															<TextBlock>员工姓名</TextBlock>
														</StackPanel>
													</materialDesign:HintAssist.Hint>
												</TextBox>
												<TextBlock Text="          "/>
												<ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}">
													<materialDesign:HintAssist.Hint>
														<StackPanel Orientation="Horizontal" Margin="0">
															<materialDesign:PackIcon Kind="RadioTower" />
															<TextBlock>权限等级</TextBlock>
														</StackPanel>
													</materialDesign:HintAssist.Hint>
													<ComboBoxItem Content="访客"/>
													<ComboBoxItem Content ="测试员"/>
													<ComboBoxItem Content ="生产经理"/>
													<ComboBoxItem Content ="管理员"/>
													<ComboBoxItem Content ="超级管理员"/>
												</ComboBox>
											</WrapPanel>
										</TreeViewItem.Header>
									</TreeViewItem>
								</TreeViewItem>

								<TreeViewItem IsExpanded="True" PreviewMouseDoubleClick="TreeViewItem_PreviewMouseDoubleClick">
									<TreeViewItem.Header>
										<WrapPanel>
											<materialDesign:PackIcon Kind="AccountEdit" />
											<TextBlock Text=" 修改用户权限"/>
										</WrapPanel>
									</TreeViewItem.Header>									
								</TreeViewItem>

								<TreeViewItem IsExpanded="True">
									<TreeViewItem.Header>
										<WrapPanel>
											<materialDesign:PackIcon Kind="AccountCancel" />
											<TextBlock Text=" 删除用户"/>
										</WrapPanel>
									</TreeViewItem.Header>
								</TreeViewItem>
								
							</TreeView>

							<DataGrid Name="DtgUser" FontSize="11" FontFamily="微软雅黑"   AlternatingRowBackground="Gray" RowBackground="White"  
												  CanUserAddRows="True" CanUserDeleteRows="True" CanUserReorderColumns="False" CanUserResizeColumns="True" 
												  CanUserSortColumns="False" MinColumnWidth="20" FrozenColumnCount="1" ScrollViewer.CanContentScroll="True" 
												  ItemsSource="{Binding}" Grid.Column="0" Grid.Row="1">
							</DataGrid>
						</Grid>
					</GroupBox>
					<GroupBox Grid.Row="0" Grid.Column="1" Header="高级设置" Style="{DynamicResource MaterialDesignGroupBox}" Margin="10" materialDesign:ShadowAssist.ShadowDepth="Depth3" BorderThickness="0" >
						<Grid>
							<Grid.RowDefinitions >
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="3*"/>
							</Grid.RowDefinitions>

							<WrapPanel Grid.Row="0">
								<TextBlock Text="测试人员权限分配     "/>
								<TextBlock Text="测试工位流程分配"/>
							</WrapPanel>

							<WrapPanel Grid.Row="1">
								<TextBlock Text="测试流程控制" />
								<CheckBox Content="程序烧录" />
								<CheckBox Content="采集校准" />
								<CheckBox Content="初测" />
								<CheckBox Content="复测" />
							</WrapPanel>

							

							<WrapPanel Grid.Row="2">
								<TextBlock Text="测试项选择" />
								<CheckBox Content="备电强制启动功能检查"/>
								<CheckBox Content="备电单投功能检查"/>
								<CheckBox Content="备电切断点检查"/>
								<CheckBox Content="备电自杀功能检查"/>
								<CheckBox Content="主电单投功能检查..."/>

							</WrapPanel>

						</Grid>



					</GroupBox>
				</Grid>
			</Grid>



		</materialDesign:Card>
	</Grid>
</UserControl>
